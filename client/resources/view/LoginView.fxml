<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="360.0" prefWidth="360.0" spacing="12.0" userData="Bingo - Login/Register"
      xmlns="http://javafx.com/javafx/21" fx:controller="view.LoginViewController">
    <children>
        <Text stroke="WHITE" strokeType="OUTSIDE" strokeWidth="2.0" text="Bingo">
            <font>
                <Font name="Arial Bold" size="36.0"/>
            </font>
        </Text>
        <TextFlow>
            <children>
                <Text fx:id="errorText" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="This username is already taken. Please choose another one."/>
            </children>
        </TextFlow>
        <VBox spacing="4.0">
            <children>
                <Label text="Username (required)"/>
                <TextField fx:id="userNameField" promptText="username"/>
            </children>
        </VBox>
        <VBox spacing="4.0">
            <children>
                <Label text="Password (required)"/>
                <PasswordField fx:id="passwordField" promptText="password"/>
            </children>
        </VBox>
        <HBox alignment="CENTER" spacing="12.0">
            <children>
                <Button cancelButton="true" mnemonicParsing="false" onAction="#onRegister" text="Register"/>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#onLogin" text="Login"/>
            </children>
            <VBox.margin>
                <Insets top="12.0"/>
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="24.0" left="24.0" right="24.0" top="24.0"/>
    </padding>
</VBox>